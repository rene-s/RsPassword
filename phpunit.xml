<phpunit bootstrap="./test/lib/bootstrap.php">
    <testsuites>
        <testsuite name="RsPassword Test Suite">
            <directory>./test/unit</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory>./src</directory>
        </whitelist>
    </filter>
    <logging>
        <log type="tap" target="/tmp/phpunit-result/rspassword-current-tap.txt"/>
        <log type="coverage-html" target="/tmp/phpunit-result/rspassword-current" showUncoveredFiles="true"/>
    </logging>
</phpunit>
